{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "target": "ESNext",                   // 编译目标
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,                 // 跳过类型检查第三方库
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,                       // 开启严格模式
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,                        // Vite 使用 esbuild，不需要 TS 输出
    "jsx": "react-jsx",                    // React 17+ 新 JSX 转换方式
    "types": ["vite/client"]               // Vite 类型
  },
  "include": [
    "src",
    "types",
    "node_modules/@uiw/react-md-editor/src"
  ],
  "exclude": ["node_modules", "dist"],
//  "include": ["src", "node_modules/@uiw/react-md-editor/src"],
}
